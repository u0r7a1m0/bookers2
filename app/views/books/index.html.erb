<div class="container d-flex">
  <div class="template">
  <%= render 'users/user', user: current_user, book: @book %>
  </div>
    <div class="col-lg-8 ml-md-5 mt-3">
      <h2>Books</h2>
      <table class="col-12 border-top table table-hover">
        <thead>
          <tr class="border-top">
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>  
        <% @books.each do |book| %>
        <tr>
          <td class="p-2">
          <%= link_to user_path(book.user) do %>
          <%= image_tag book.user.get_profile_image(80,80) %>
          <% end %>
          </td>
          <!--books/(:id)のリンク-->
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
</div>
