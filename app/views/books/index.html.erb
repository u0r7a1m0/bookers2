<!--「container」-->
<div class="container">
  <!--「row」行部分-->
  <!--エラー文-->
  <div class="row">
    <div class="errors col-md-12 mt-3">
      <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
      <% end %>
    </div>
  </div>
  <!--エラー文ここまで-->

  <div class="d-md-flex row">
    <div class="col-md-3">
      <!--部分テンプレート-->
      <%= render 'users/user', user: current_user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="col-12 border-top table table-hover">
        <thead>
          <tr class="border-top">
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tr>
          <td class="p-2">
          <%= link_to user_path(book.user) do %>
          <%= image_tag book.user.get_profile_image(80,80) %>
          <% end %>
          </td>
        <!--books/(:id)のリンク-->
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>