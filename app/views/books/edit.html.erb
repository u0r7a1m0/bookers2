
<div class="container col-4 m-auto">
    <h1 class="mt-3">Editing Book</h1>
  <!--エラー文-->
  <div class="errors ">
  <% if @book.errors.any? %>
    <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  </div>
  <!--エラー文ここまで-->

    <%= form_with model: @book do |f| %>
    <label for="inputName">Title</label>
    <p><%= f.text_field :title, autofocus: true, id:"inputName", class:'form-control' %></p>

    <label for="inputName">Opinion</label>
    <p><%= f.text_field :body, autofocus: true, id:"inputIntroduction", class:'form-control' %></p>

    <%= f.submit "Update Book",class: "btn btn-success" %>
    <% end %>

    <!--下部リンク-->
    <div class="bottom-link pt-3">
      <%= link_to 'Show', book_path(@book.id) %>
      <span class="mr-1 ml-1">|</span>
      <%= link_to 'Back', books_path %>
    </div>

</div>

