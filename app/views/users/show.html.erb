<p class="notice"><%= notice %></p>

<main class="container mt-3">


  <div class="container d-md-flex">
    <!--部分テンプレート-->
    <div class="template">
      <%= render 'user',user: @user, book: @book %>
    </div>
    <!--Usersのshow右側-->
      <div class="col-lg-8 ml-md-5 mt-3">
        <h2>Books</h2>
        <table class="table col-12 border-top table table-hover">
          <thead>
            <tr class="border-top">
              <th></th>
              <th class="p-2">Title</th>
              <th class="p-2">Opinion</th>
              <th></th>
            </tr>
          </thead>
  
          <% @books.each do |book| %>
          <tr class="border-top">
            <td class="p-3"><%= image_tag book.user.get_profile_image(80,80) %></td>
            <td class="p-3"><%= link_to book.title, book_path(book.id) %></td>
            <td class="p-3"><%= book.body %></td>
          </tr>
        <% end %>
      </table>
  
  </div>
</main>
