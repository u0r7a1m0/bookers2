<p class="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <!--部分テンプレート-->
    <div class="col-md-3">
      <%= render 'user',user: @user, book: @book %>
    </div>
    <!--Usersのshow右側-->
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table border-top table table-hover">
          <thead>
            <tr class="border-top">
              <th></th>
              <th class="p-2">Title</th>
              <th class="p-2">Opinion</th>
              <th></th>
            </tr>
          </thead>

          <% @books.each do |book| %>
          <tr class="border-top">
            <td class="p-3">
              <%= link_to user_path(@user.id) do %>
              <%= image_tag book.user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td class="p-3"><%= link_to book.title, book_path(book.id) %></td>
            <td class="p-3"><%= book.body %></td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>
