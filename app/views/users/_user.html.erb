<div class="container d-md-flex">

      <!--ユーザー情報-->
      <div class="profile-container">
        <h2>User info</h2>
        <table class="container">
          <tr class="border-bottom">
            <th><%= image_tag user.get_profile_image(100,100) %>️</th>
          </tr>
          <tr class="border-top p-2">
            <th class="p-2">name</th>
            <td class="p-2"><%= user.name %></td>
          </tr>
          <tr class="border-top">
            <th class="p-2">introduction</th>
            <td class="p-2"><%= user.introduction %></td>
          </tr>
        </table>
        <%= link_to edit_user_path(user.id) ,class:"btn btn-outline-secondary col-12 mt-5 mb-3" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>

      <!--ユーザ情報ここまで-->
          <!--投稿フォーム-->

          <div class="new-post">
          <h2>New book</h2>
            <%= form_with model: book do |f| %>
            <p>Title</p>
            <%=f.text_field:title, class:'form-control' %>

            <p>Opinion</p>
            <%=f.text_area:body, class:'form-control' %>

            <%= f.submit "Create Book",class:'btn btn-success mt-3' %>
            <!--<button type="submit" class="btn btn-success">-->
            <!--Create Book-->
            <!--</button>-->
            <% end %>
          </div>
    </div>
</div>

