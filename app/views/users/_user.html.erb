<p id="notice"><%= notice %></p>
<div class="container d-md-flex">

      <!--ユーザー情報-->
      <div class="profile-container">
        <h2>User info</h2>
        <table class="container">
          <tr class="border-bottom">
            <th><%= image_tag user.get_profile_image(200,200) %>️</th>
          </tr>
          <tr class="border-bottom p-2">
            <th class="p-2">name</th>
            <td class="p-2"><%= user.name %></td>
          </tr>
          <tr>
            <th class="p-2">introduction</th>
            <td class="p-2"><%= user.introduction%></td>
          </tr>
        </table>
        <%= link_to edit_user_path(user.id) ,class:"btn btn-outline-secondary col-12 mt-5 mb-3" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>

      <!--ユーザ情報ここまで-->

          <!--投稿フォーム-->
          <h2>New book</h2>
          <!--新規投稿フォームここから-->
          <div class="new-post">
            <%= form_with model:@book do |f| %>
            <p>Title</p>
            <%=f.text_field:title, class:'form-control' %>

            <p>Opinion</p>
            <%=f.text_area:body, class:'form-control' %>

            <p><%=f.submit 'Create Book',class:"new-post-botton bg-success text-white btn mt-3" %></p>
            <% end %>
          </div>
    </div>




