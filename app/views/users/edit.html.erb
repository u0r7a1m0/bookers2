
<div class="container col-4 m-auto">


  <h2 class="mt-3">User info</h2>
  <!--エラー文-->
  <div class="errors ">
  <% if @user.errors.any? %>
    <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  </div>
  <!--エラー文-->
  <%= form_with model: @user do |f| %>

  <label for="inputName">Name</label>
  <p><%= f.text_field :name, autofocus: true, id:"inputName", class:'form-control' %></p>

  <label for="inputImage">Image</label>
  <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>

  <label for="inputName">Introduction</label>
  <p><%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", class:'form-control' %></p>


  <!--<button type="submit" class="btn btn-secondary">-->
  <!--Update User-->
  <!--</button>-->
  <%= f.submit "Update User",class: "btn btn-secondary" %>
  <% end %>


</div>

