<div class="container d-md-flex">
  <!--部分テンプレート-->
  <div class="template">
    <%= render 'user',user: current_user,book: @book %>
  </div>

  <!--Usersのindex右側-->
  <div class="col-lg-8 ml-5 mt-3">
      <h2>Users</h2>
      <table class="col-12 border-top">
        <tr class="border-bottom">
          <th class="p-2">image</th>
          <th class="p-2">name</th>
        <th></th>
      </tr>
      <tr class="border-bottom">
      <% @users.each do |user| %>
        <td class="p-2"><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'show', user_path(user.id) %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>