<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <script src="https://kit.fontawesome.com/c1c2279c79.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <!--ヘッダーここから-->
    <header class="bg-dark text-white">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-1 text-white" href="/">Bookers</a>
          
          <!--レスポンシブボタン-->
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <!--レスポンシブボタンここまで-->
          <div class="collapse navbar-collapse" id="navbarNavDropdown">

            <!--ナビゲーション-->
            
            <ul class="navbar-nav ml-auto">
            <!--サインイン状態の場合-->
            <% if user_signed_in? %>

            <li class="nav-item d-flex">
              <i class="fa-solid fa-house"></i>
              <%= link_to 'Home', books_path, class: 'nav-link text-white d-inline' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-users"></i>
              <%= link_to 'Users', books_path, class: 'nav-link text-white d-inline' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-book-open"></i>
              <%= link_to 'Books', books_path, class: 'nav-link text-white d-inline' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-right-from-bracket"></i>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-white d-inline' %>
            </li>
            <!--未ログイン状態の場合-->
            <% else %>
            <li class="nav-item">
              <i class="fa-solid fa-house"></i>
              <%= link_to 'Home', root_path, class: 'nav-link text-white d-inline' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-link"></i>
              <%= link_to 'About', home_about_path, class: 'nav-link text-white d-inline' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-user-plus"></i>
              <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link text-white d-inline' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-right-to-bracket"></i>
              <%= link_to "Log in", new_user_session_path, class: 'nav-link text-white d-inline' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <!--ヘッダーここまで-->
    <main>
    <%= yield %>
    </main>
    <!--フッターここから↓-->
    <footer class="container p-5">
      <div class="d-flex justify-content-center">
        <p>CopyRight Infratop.inc</p>
      </div>
    </footer>
    <!--フッターここまで↑-->
  </body>
</html>
